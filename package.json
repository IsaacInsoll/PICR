{
  "name": "picr",
  "version": "0.9.5",
  "description": "",
  "type": "module",
  "workspaces": [
    "shared",
    "backend",
    "frontend",
    "app"
  ],
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "vitest run",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "ci:check": "npm run format:check && npm run lint",
    "lint": "npm run lint:shared && npm run lint:backend && npm run lint:frontend && npm run lint:app",
    "lint:shared": "npm --prefix shared run lint",
    "lint:backend": "npm --prefix backend run lint",
    "lint:frontend": "npm --prefix frontend run lint",
    "lint:app": "npm --prefix app run lint",
    "workflow": "act push --pull=false --artifact-server-path $PWD/.artifacts -P ubuntu-24.04=catthehacker/ubuntu:act-latest",
    "install-all": "npm ci",
    "build:local": "npm --prefix backend run build && npm run build:lightroom && npm --prefix frontend run build && npm --prefix dist ci",
    "gql": "graphql-codegen --config codegen.ts && prettier --write shared/urql/graphql.schema.json frontend/src/fonts.generated.ts app/src/fonts.generated.ts app/src/graphql.schema.json",
    "release": "dotenv -- release-it --only-version",
    "build:lightroom": "cd lightroom/picr.lrplugin && zip -rq ../../frontend/public/picr-lightroom-plugin.zip .",
    "start:server-ts": "cd backend && tsc -w",
    "start:server": "nodemon --delay 0.5 --watch .env --watch dist/server dist/server/backend/app.js",
    "start:client": "cd frontend && npm start",
    "start:db": "docker compose up -d",
    "start": "concurrently -c \"gray,blue,magenta,cyan\" npm:start:*"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/client-preset": "^4.8.0",
    "@graphql-codegen/introspection": "^4.0.3",
    "@release-it/bumper": "^7.0.2",
    "concurrently": "^9.2.1",
    "decompress": "^4.2.1",
    "docker-compose": "^1.3",
    "dotenv-cli": "^11",
    "nodemon": "^3.1.11",
    "prettier": "^3.8",
    "release-it": "^19.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.1.1"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "requireBranch": "master",
      "commitMessage": "ðŸš€ Release ${version}",
      "commit": true,
      "tag": true,
      "push": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/bumper": {
        "out": {
          "file": "./version.txt",
          "type": "text/plain",
          "consumeWholeFile": true
        }
      }
    },
    "hooks": {
      "before:bump": "node lightroom/scripts/update-info-lua.js ${version}"
    }
  },
  "author": "Isaac Insoll",
  "license": "ISC",
  "engines": {
    "node": "24.13.0"
  },
  "overrides": {
    "join-images": {
      "sharp": "^0.34"
    },
    "react-rewards": {
      "react": "^19",
      "react-dom": "^19"
    },
    "mantine-react-table": {
      "@mantine/core": "^8",
      "@mantine/dates": "^8",
      "@mantine/hooks": "^8"
    },
    "zeego": {
      "@react-native-menu/menu": "2.0.0",
      "react-native-ios-context-menu": "3.2",
      "react-native-ios-utilities": "5.2"
    }
  }
}
