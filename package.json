{
  "name": "picr",
  "version": "0.2.4",
  "description": "",
  "main": "backend/server.ts",
  "scripts": {
    "start:server-ts": "tsc -w",
    "start:server": "nodemon --watch .env --watch dist dist/backend/server.js",
    "start:client": "cd frontend && npm start",
    "start:db": "docker compose up -d",
    "start": "concurrently npm:start:*",
    "build": "tsc",
    "run": " node dist/backend/server.js",
    "release": "dotenv -- release-it --only-version"
  },
  "author": "Isaac Insoll",
  "license": "ISC",
  "dependencies": {
    "archiver": "^7.0.1",
    "blurhash": "^2.0.5",
    "chokidar": "^3.6.0",
    "cli-progress": "^3.12.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "exif-reader": "^2.0.1",
    "express": "^5.0.0-beta.3",
    "fast-xml-parser": "^4.5.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "graphql": "^16.8.1",
    "graphql-http": "^1.22.0",
    "graphql-scalars": "^1.23.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.0.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "progress": "^2.0.3",
    "reflect-metadata": "^0.2.1",
    "sanitize-html": "^2.13.0",
    "semver": "^7.6.3",
    "sequelize": "^6.37.1",
    "sequelize-typescript": "^2.1.6",
    "sharp": "^0.33.2",
    "sqlite3": "^5.1.7",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@release-it/bumper": "^6.0.1",
    "@types/archiver": "^6.0.2",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.4",
    "@types/validator": "^13.11.9",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.56.0",
    "prettier": "3.2.5",
    "release-it": "^17.6.0",
    "typescript": "^5.6.0-beta"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "cd frontend && npm run build",
        "npm run build"
      ],
      "after:git:release": [
        "docker build . -t isaacinsoll/picr:latest -t isaacinsoll/picr:${version} -t ghcr.io/isaacinsoll/picr:latest -t ghcr.io/isaacinsoll/picr:${version}",
        "docker push isaacinsoll/picr:${version}",
        "docker push isaacinsoll/picr:latest",
        "docker push ghcr.io/isaacinsoll/picr:${version}",
        "docker push ghcr.io/isaacinsoll/picr:latest"
      ]
    },
    "git": {
      "requireBranch": "master",
      "commitMessage": "ðŸš€ Release ${version}",
      "commit": true,
      "tag": true,
      "push": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/bumper": {
        "out": {
          "file": "dist/version.txt",
          "type": "text/plain",
          "consumeWholeFile": true
        }
      }
    }
  }
}
