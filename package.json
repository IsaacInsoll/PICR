{
  "name": "picr",
  "description": "",
  "type": "module",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "vitest run",
    "workflow": "act push --artifact-server-path $PWD/.artifacts -P ubuntu-24.04=catthehacker/ubuntu:act-latest",
    "gql": "graphql-codegen --config codegen.ts",
    "release": "dotenv -- release-it --only-version",
    "start:server-ts": "cd backend && tsc -w",
    "start:server": "cd dist && nodemon --delay 0.5 --watch .env --watch server server/backend/app.js",
    "start:client": "cd frontend && npm start",
    "start:db": "docker compose up -d",
    "start": "concurrently -c \"gray,blue,magenta,cyan\" npm:start:*"
  },
  "dependencies": {
  },
  "devDependencies": {
    "decompress": "^4.2.1",
    "docker-compose": "^1.1.0",
    "dotenv-cli": "^7.4.2",
    "nodemon": "^3.1.9",
    "concurrently": "^9.1.2",
    "@release-it/bumper": "^7.0.2",
    "vitest": "^3.1.1"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run workflow"
      ]
    },
    "git": {
      "requireBranch": "master",
      "commitMessage": "ðŸš€ Release ${version}",
      "commit": true,
      "tag": true,
      "push": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/bumper": {
        "out": {
          "file": "../version.txt",
          "type": "text/plain",
          "consumeWholeFile": true
        }
      }
    }
  },
  "author": "Isaac Insoll",
  "license": "ISC"
}
