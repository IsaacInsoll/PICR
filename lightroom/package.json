{
  "name": "picr-lightroom-plugin",
  "version": "0.3.1",
  "description": "PICR Lightroom Plugin - Import ratings and flags from PICR into Lightroom Classic",
  "type": "module",
  "private": true,
  "scripts": {
    "release": "release-it",
    "build": "node scripts/build-zip.js"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "release-it": "^19.0.0"
  },
  "release-it": {
    "npm": false,
    "git": {
      "changelog": null,
      "requireBranch": "master",
      "commitMessage": "ðŸ”Œ Lightroom plugin v${version}",
      "tagName": "lightroom-v${version}",
      "tagAnnotation": "Lightroom Plugin v${version}",
      "commit": true,
      "tag": true,
      "push": true
    },
    "github": {
      "release": true,
      "releaseName": "Lightroom Plugin v${version}",
      "assets": [
        "dist/picr-lightroom-v${version}.lrplugin.zip"
      ]
    },
    "hooks": {
      "before:bump": "node scripts/update-version.js ${version}",
      "after:bump": "npm run build",
      "after:release": "git tag -f lightroom-latest && git push origin lightroom-latest --force"
    }
  },
  "author": "Isaac Insoll",
  "license": "MIT"
}
